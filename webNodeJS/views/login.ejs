<!DOCTYPE html>
<html>
<head>
  <title>Ferremas Login</title>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/headers') %>
  <div class="left-section darkback"></div>
  <div class="right-section d-flex align-items-center justify-content-center">
    <div class="container mb-3">
      <div class="row justify-content-center">
        <div class="col-md-5 small-form">
          <form id="loginForm">
            <div class="mb-3">
              <label for="username" class="form-label">Usuario</label>
              <div class="input-group">
                <input class="form-control" type="text" name="username" id="username"
                  placeholder="Ingrese su Correo electronico" required="True">
              </div>
            </div>
  
            <div class="mb-3">
              <label for="password" class="form-label">Contraseña</label>
              <div class="input-group">
                <input class="form-control" type="password" name="password" id="password"
                  placeholder="Ingrese su contraseña" required="True">
              </div>
            </div>
  
            <input type="button" class="btn darkback text-white" id="loginButton" value="Login">
            <a class="btn btn-secondary me-md-2" aria-current="page" href="signup">Signup</a>
          </form>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/footer') %>
  <%- include('partials/scripts') %>
  <script src="/js/login.js"></script>
</body>
</html>